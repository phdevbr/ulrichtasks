<h1 class="tasks-title">Tasks</h1>
<div class="d-flex justify-content-end">
  <%= link_to "New task", new_task_path, class: "btn btn-success me-4" %>
</div>

<div class="mx-3 me-4" id="tasks">
  <% if @tasks.count < 1 %>
    <h4 class="text-center">No tasks were found</h4>
  <% end %>
  <% @tasks.each do |task| %>
    <% if @user_id == task.user_id %>
      <div class="task-container my-3">
      <%= render task %>
      <%= button_to "Destroy this task", task, class: "destroy-task btn btn-primary", method: :delete %>
      </div>
    <% end %>
  <% end %>
</div>
