<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% if !@user_id %>
    <h3>No tasks were found</h3>
  <% end %>
  <% @tasks.each do |task| %>
    <% if @user_id == task.user_id %>
      <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
